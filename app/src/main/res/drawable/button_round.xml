<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <stroke android:width="1dip" android:color="#00574B" />
            <gradient android:angle="-90" android:startColor="#008577" android:endColor="#00574B"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <stroke android:width="1dip" android:color="#008577" />
            <solid android:color="#00574B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval">
            <stroke android:width="1dip" android:color="#008577" />
            <gradient android:angle="-90" android:startColor="#008577" android:endColor="#008577" />
        </shape>
    </item>
</selector>